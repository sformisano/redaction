#!/bin/bash
# Pre-commit hook that runs fmt, clippy, and tests before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "ğŸ“ Checking formatting..."
if ! cargo +nightly fmt --all -- --check; then
    echo "âŒ Formatting check failed. Run 'cargo +nightly fmt --all' to fix."
    exit 1
fi
echo "âœ… Formatting OK"

# Run clippy
echo "ğŸ“ Running clippy..."
if ! cargo clippy --all --all-targets --all-features -- -D warnings -D rust-2018-idioms -D rust-2021-compatibility -A deprecated -A dead-code; then
    echo "âŒ Clippy check failed. Fix the warnings above."
    exit 1
fi
echo "âœ… Clippy OK"

# Run tests (excluding compile_fail tests which can be flaky with different rust versions)
echo "ğŸ§ª Running tests..."
if ! cargo test --all-features --lib; then
    echo "âŒ Tests failed."
    exit 1
fi
echo "âœ… Tests OK"

echo "âœ… All pre-commit checks passed!"
